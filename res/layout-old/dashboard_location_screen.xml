<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parentNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_last_touch_text"
            android:textColor="@color/text_orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ParentLocTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/my_touch_duration"
            android:textColor="@color/text_grey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ago_text"
            android:textColor="@color/text_orange"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/circular_image"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <com.touchKin.touchkinapp.custom.HoloCircularProgressBar
            android:id="@+id/holoCircularProgressBar"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            app:stroke_width="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kins_last_touch_text"
            android:textColor="@color/text_orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/kin_touch_duration"
            android:textColor="@color/text_grey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ago_text"
            android:textColor="@color/text_orange"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>